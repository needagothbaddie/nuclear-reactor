<mvc:View
    controllerName="chernobyl.controller.Employee"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page
        showHeader="false"
        class="sapUiContentPadding"
    >
        <core:Fragment
            fragmentName="chernobyl.view.fragments.EmplUpdate"
            type="XML"
        />
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    id="BtnCalSal"
                    text="Calculate Salary"
                    press="onCalculateSalary"
                    visible="{= ${/mode} === 'I'}"
                />
                <Button
                    id="BtnCreateEmpl"
                    text="Save"
                    press="onSubmitForm"
                    visible="{= ${/mode} === 'I'}"
                    type="Emphasized"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
